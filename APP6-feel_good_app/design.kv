<LoginScreen>:
    GridLayout:
        spacing: 20,20
        padding: 15,15
        cols: 1
        GridLayout:
            spacing: 10, 10
            cols: 1
            Label:
                text: "User Login"
                font_size: 50
            TextInput:
                id: uname
                hint_text: "Username"
                size_hint: 1, 0.6
            TextInput:
                id: pswd
                hint_text: "Password"
                password: True
                size_hint: 1, 0.6
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.uname.text, root.ids.pswd.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x':0.5, 'center_y':0.5}
                    opacity: 1 if self.state=='normal' else 0.5
            Label:
                id: wrong_login
                text: ""
        GridLayout:
            size_hint: 0.2,0.2
            cols: 2
            Button:
                text: "Forget Password"
                on_press: root.forget(root.ids.uname.text)
                background_color: 1,1,1,0
                opacity: 1 if self.state=='normal' else 0.5
                color: 1,1,0
            Button:
                text: "Sign Up"
                on_press: root.sign_up() 
                background_color: 1,1,1,0
                opacity: 1 if self.state=='normal' else 0.5
                color: 1,1,0

<SignUpScreen>:
    GridLayout:
        padding: 15,15
        spacing: 10,10
        cols: 1
        Label:
            id: la
            text: "Sign up for a new journey"
        TextInput:
            id: usrn
            hint_text: "New Username"
            size_hint: 1,0.7
        TextInput:
            id: pswd
            hint_text: "New Password"
            size_hint: 1,0.7
        TextInput:
            id: cp
            hint_text: "Confirm Password"
            size_hint: 1,0.7
        RelativeLayout:
            spacing: 15,15
            Button:
                text: "Sign Up"
                on_press: root.add_user(root.ids.usrn.text, root.ids.pswd.text, root.ids.cp.text)
                size_hint: 0.4,0.5
                pos_hint: {'center_x':0.7, 'center_y': 0.5}
            Button:
                text: "Back"
                on_press: root.back()
                size_hint: 0.4,0.5
                pos_hint: {'center_x':0.3, 'center_y': 0.5}

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up Successful"
        Button:
            text: "Login Page"
            on_press: root.switch()
            

<LoginSuccessScreen>:
    GridLayout:
        spacing: 15,15
        padding: 15,10
        cols: 1
        RelativeLayout:
            LogoutButton:
                on_press: root.logout()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.25,0.5
                pos_hint: {'center_x':0.9, 'center_y': 0.5}
                
        Label:
            text: "How are you feeling?"
        TextInput:
            id: feeling
            hint_text: "enter your mood-happy, sad, unloved...."
        RelativeLayout:
            Button:
                text: "Enter"
                on_press: root.get_quote(root.ids.feeling.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.5}
        ScrollView:
            Label:
                id: dis_quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"    
    SignUpScreen:
        name: "signup_screen"
    SignUpSuccessScreen:
        name : "signup_success_screen"
    LoginSuccessScreen:
        name: "login_success_screen"

